---
   - name : Linux login.defs hardening
     hosts:
     remote_user:
     become:yes


- name: modifying in /etc/login.defs
          lineinfile:
            path: /etc/login.defs
            regexp: '^PASS_MAX_DAYS'
            line: PASS_MAX_DAYS 90
 
 
        - name: modifying in /etc/login.defs
          lineinfile:
            path: /etc/login.defs
            regexp: '^PASS_MIN_DAYS'
            line: PASS_MIN_DAYS 7
 
 
        - name: modifying in /etc/login.defs
          lineinfile:
            path: /etc/login.defs
            regexp: '^PASS_WARN_AGE'
            line: PASS_WARN_AGE 7
 